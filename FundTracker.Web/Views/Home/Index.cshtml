@model FundTracker.Web.ViewModels.HomePageViewModel

@{
    ViewBag.Title = "Fund Tracker";
    Layout = "~/Views/_Layout.cshtml";
}

@section Header
{
}

<h2>Fund Tracker</h2>

<div class="container">
    <div id="create-a-wallet" class="wallet-name-panel">
        <form method="POST" action="/Wallet/CreateWallet">
            <label for="name">Bob in your new wallet's name</label>
            <input type="text" name="name" class="create-name" />
            <input type="hidden" name="date" value="@DateTime.Today.ToString("d")" />
            @if (!string.IsNullOrEmpty(Model.ValidationFailure))
            {<span class="error-text">@Model.ValidationFailure</span>}
            <label class="submit-label">Click the shiny button to create a wallet!</label>
            <input type="submit" value="Create Me" class="create-submit button" />
        </form>
    </div>
</div>
<div id="find-a-wallet" class="container">
    <div class="wallet-name-panel">
        <form method="POST" action="/Wallet/Display">
            <label for="name">Pop in your existing wallet's name</label>
            <input type="text" name="walletName" class="find-name" />
            <input type="hidden" name="date" value="@DateTime.Today.ToString("d")" />
            <label class="submit-label">Click away and we'll find your wallet</label>
            <input type="submit" value="Find Me" class="find-submit button" />
        </form>
    </div>
</div>

@section Footer
{}