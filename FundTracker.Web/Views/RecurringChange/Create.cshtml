@model FundTracker.Web.ViewModels.Builders.CreateRecurringChangeViewModel

@{
    ViewBag.Title = "Create a recurring change";
    Layout = "~/Views/_Layout.cshtml";
}
@section Header
{}
<h2>Create a recurring change for <strong>@Model.WalletName</strong></h2>

<form method="POST" action="@Model.FormAction">
    <input type="hidden" name="walletName" value="@Model.WalletName" />
    <input type="hidden" name="date" value="@Model.SelectedDate"/>
    <label for="amount">Enter a value to deposit</label>
    <input type="text" name="amount" min="0" class="amount" />
    <input type="text" name="changeName" class="name" />
    <select name="recurranceRule" class="rule">
        <option value="Just today" selected="selected">Just today</option>
        <option value="Every week">Once a week</option>
        <option value="Every day">Every day</option>
    </select>
    <input type="submit" class="submit" />
</form>