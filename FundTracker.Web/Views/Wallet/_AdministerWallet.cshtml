@model FundTracker.Web.ViewModels.WalletViewModel
<div class="wallet-input">
    <form method="POST" action="/Wallet/AddFunds">
        <input type="hidden" name="name" value="@Model.Name" />
        <label for="fundsToAdd">Funds to add</label>
        <input type="number" name="fundsToAdd" class="funds-to-add"  value="0" min="0" />
        <input type="submit" name="submit-add" class="submit-add fund-submit"value="Add Funds"/>
    </form>
    <form method="POST" action="/Wallet/RemoveFunds">
        <input type="hidden" name="name" value="@Model.Name" />
        <label for="fundsToRemove">Funds to remove</label>
        <input type="number" name="fundsToRemove" class="funds-to-remove" value="0" min="0"/>
        <input type="submit" name="submit-remove" class="submit-remove fund-submit" value="Remove Funds" />
    </form>
</div>
