@model FundTracker.Web.ViewModels.WalletDatePickerViewModel

<div id="calendar">
    <strong class="month">@Model.SelectedDate.ToString("MMMMMMMMM")</strong>
    <div class="cl"></div>
    <a class="other-month previous" href="/Wallet/Display/?walletName=@Model.WalletName&date=@Model.SelectedDate.AddMonths(-1).ToString("yyyy")-@Model.SelectedDate.AddMonths(-1).ToString("MM")-@DateTime.DaysInMonth(Model.SelectedDate.AddMonths(-1).Year, Model.SelectedDate.AddMonths(-1).Month)">
        < Previous Month
    </a>
    <div>
        @foreach (var day in Model.DaysInCurrentMonth)
        {
            if (day == Model.SelectedDate.ToString("dd"))
            {
                <a class="current-month day selected">@day</a>
                continue;
            }
            <a class="current-month day" href="/Wallet/Display/?walletName=@Model.WalletName&date=@Model.SelectedDate.ToString("yyyy")-@Model.SelectedDate.ToString("MM")-@day">@day</a>
        }
    </div>
    <a class="other-month next" href="/Wallet/Display/?walletName=@Model.WalletName&date=@Model.SelectedDate.AddMonths(1).ToString("yyyy")-@Model.SelectedDate.AddMonths(1).ToString("MM")-01">
        Next Month >
    </a>
</div>