@model FundTracker.Web.ViewModels.WalletDatePickerViewModel

<div id="calendar">
    <strong class="month">@Model.SelectedDate.ToString("MMMMMMMMM yyyy")</strong>
    <div class="cl"></div>
    <a class="other-month previous" href="/Wallet/Display/?walletName=@Model.WalletName&date=@Model.SelectedDate.AddMonths(-1).ToString("yyyy")-@Model.SelectedDate.AddMonths(-1).ToString("MM")-@DateTime.DaysInMonth(Model.SelectedDate.AddMonths(-1).Year, Model.SelectedDate.AddMonths(-1).Month)">
        < Previous Month
    </a>
    <div class="dekstop">
        @foreach (var day in Model.DaysInCurrentMonth)
        {
            if (day == Model.SelectedDate.ToString("dd"))
            {
                <a class="current-month day selected">@day</a>
                continue;
            }
            <a class="current-month day" href="/Wallet/Display/?walletName=@Model.WalletName&date=@Model.SelectedDate.ToString("yyyy")-@Model.SelectedDate.ToString("MM")-@day">@day</a>
        }
    </div>
    <div class="tablet">
        <a class="previous-day" href="/Wallet/Display/?walletName=@Model.WalletName&date=@Model.SelectedDate.AddDays(-1).ToString("yyyy-MM-dd")">< Previous Day</a>
        <strong class="today">@Model.SelectedDate.ToString("dd")</strong>
        <a class="next-day" href="/Wallet/Display/?walletName=@Model.WalletName&date=@Model.SelectedDate.AddDays(1).ToString("yyyy-MM-dd")">Next Day ></a>
    </div>
    <div class="mobile">
        <a class="previous-day" href="/Wallet/Display/?walletName=@Model.WalletName&date=@Model.SelectedDate.AddDays(-1).ToString("yyyy-MM-dd")">< Back</a>
        <strong class="today">@Model.SelectedDate.ToString("dd")</strong>
        <a class="next-day" href="/Wallet/Display/?walletName=@Model.WalletName&date=@Model.SelectedDate.AddDays(1).ToString("yyyy-MM-dd")">Forward ></a>
    </div>
    <a class="other-month next" href="/Wallet/Display/?walletName=@Model.WalletName&date=@Model.SelectedDate.AddMonths(1).ToString("yyyy")-@Model.SelectedDate.AddMonths(1).ToString("MM")-01">
        Next Month >
    </a>
</div>