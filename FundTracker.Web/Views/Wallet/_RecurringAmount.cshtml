@using System.Globalization
@model FundTracker.Web.ViewModels.RecurringAmountViewModel


<div class="recurring-amount @Model.RecurringType.ToLower()">
    <a href="/RecurringChanges/@Model.RecurringType?walletName=@Model.WalletName">Total @Model.RecurringType.ToString(CultureInfo.InvariantCulture)s</a>: £<strong class="amount">@Model.PositiveTotal</strong>
</div>

<div class="recurring-amount limited @Model.RecurringType.ToLower()">
    £<strong class="amount">@Model.PositiveTotal</strong>
</div>
